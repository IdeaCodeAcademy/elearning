<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="ica_elearning.IcaCourseClientAction">
        <div class="container mt-5">
            <h1>Courses</h1>
            <table class="table table-responsive-lg table-dark">
                <thead>
                    <tr>
                        <td>Name</td>
                        <td>Fees</td>
                        <td>State</td>
                    </tr>
                </thead>
                    <tbody>
                    <t t-foreach="state.courses" t-as="course" t-key="course.id">
                        <tr>
                            <td><t t-esc="course.name"/></td>
                            <td><t t-esc="course.fees"/></td>
                            <td><t t-esc="course.state"/></td>
                         </tr>
                    </t>
                </tbody>
            </table>
        </div>
    </t>
</templates>