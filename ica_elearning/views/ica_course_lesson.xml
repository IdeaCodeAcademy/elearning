<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="ica_course_lesson_view_tree" model="ir.ui.view">
        <field name="name">ica_course_lesson_view_tree</field>
        <field name="model">ica.course.lesson</field>
        <field name="arch" type="xml">
            <tree string="ica_course_lesson_tree">
                <field name="preview" widget="image" optional="hide"/>
                <field name="name"/>
                <field name="state" widget="badge"/>
                <field name="module_id" optional="show"/>
                <field name="course_id" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="ica_course_Lesson_view_form" model="ir.ui.view">
        <field name="name">ica_course_Lesson_view_form</field>
        <field name="model">ica.course.lesson</field>
        <field name="arch" type="xml">
            <form string="ica_course_Lesson_form">
                <header>
                    <field name="state" widget="statusbar" options="{'clickable':'1'}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="module_id"/>
                            <field name="course_id"/>
                            <field name="video"/>
                        </group>
                        <group>
                            <field name="preview" widget="image"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ica_course_lesson_action" model="ir.actions.act_window">
        <field name="name">Lessons</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ica.course.lesson</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>