<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="ica_course_enrollment_view_form" model="ir.ui.view">
        <field name="name">ica_course_enrollment_view_form</field>
        <field name="model">ica.course.enrollment</field>
        <field name="arch" type="xml">
            <form string="ica_course_enrollment_form">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="0"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="currency_id"/>
                            <field name="total_amount"/>
                        </group>
                    </group>
                    <field name="line_ids">
                        <tree editable="1">
                            <field name="course_id"/>
                            <field name="currency_id" optional="hide"/>
                            <field name="fees"/>
                            <field name="partner_id" optional="hide"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ica_course_enrollment_action" model="ir.actions.act_window">
        <field name="name">Enrollment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ica.course.enrollment</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>