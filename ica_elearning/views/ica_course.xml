<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="ica_course_view_tree" model="ir.ui.view">
        <field name="name">ica_course_view_tree</field>
        <field name="model">ica.course</field>
        <field name="arch" type="xml">
            <tree string="ica_course_view_tree" create="1" edit="1" delete="1" duplicate="1">
                <field name="name"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-success="state == 'published'"
                       decoration-danger="state == 'unpublished'"/>
                <field name="author_ids" widget="many2many_tags" optional="hide"/>
                <field name="module_ids" optional="hide"/>
                <field name="lesson_ids" optional="hide"/>
                <field name="lesson_count" optional="show" widget="badge"/>
                <field name="module_count" optional="show" widget="badge"/>
                <field name="enrollment_count" optional="show" widget="badge"/>
                <field name="currency_id" optional="hide"/>
                <field name="fees" optional="show" sum="Total Course Fees" groups="ica_elearning.group_author"/>
            </tree>
        </field>
    </record>

    <record id="ica_course_view_form" model="ir.ui.view">
        <field name="name">ica_course_view_form</field>
        <field name="model">ica.course</field>
        <field name="arch" type="xml">
            <form string="ica_course_form" create="1" edit="1" delete="1" duplicate="0">
                <header>
                    <button name="action_draft" type="object" string="Rest to Draft"/>
<!--                    <button name="action_self_enrollment" type="object" string="Enroll Course"-->
<!--                            class="btn btn-info"-->
<!--                            invisible="state != 'published'"/>-->
                    <button name="%(ica_elearning.ica_course_feedback_wizard_action)d" type="action" string="Feedback"
                            class="btn btn-outline-primary"
                            invisible="state != 'published'"/>
                    <button name="action_published" type="object" string="Publish" class="btn-primary"/>
                    <button name="action_published" type="object" string="Unpublish" class="btn-danger"
                            confirm="Are you sure to unpublish course ?"/>
                    <field name="state" widget="statusbar" options="{'clickable':'1'}"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Published" bg_color="text-bg-success"
                            invisible="state != 'published'"/>
                    <widget name="web_ribbon" title="Unpublished" bg_color="text-bg-danger"
                            invisible="state != 'unpublished'"/>
                    <div class="oe_button_box" name="button_box" groups="ica_elearning.group_author">
                        <button name="action_view_modules" type="object" class="oe_stat_button" icon="fa-users">
                            <field string="Modules" name="module_count" widget="statinfo"/>
                        </button>
                        <button name="action_view_lessons" type="object" class="oe_stat_button" icon="fa-magic">
                            <field string="Lessons" name="lesson_count" widget="statinfo"/>
                        </button>
                        <button name="action_view_enrollment" type="object" class="oe_stat_button" icon="fa-envelope">
                            <field string="Enrollment" name="enrollment_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1><field name="reference"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="author_ids" widget="many2many_tags"/>
                            <field name="company_id"/>
                            <field name="currency_id"/>
                            <field name="fees" groups="ica_elearning.group_manager"/>
                            <field name="per_fees" groups="ica_elearning.group_author"/>
                            <field name="release_date"/>
                        </group>
                        <group>
                            <field name="total_amount"/>
                            <field name="description"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="Modules">
                            <field name="module_ids"/>
                        </page>
                        <page name="Lessons">
                            <field name="lesson_ids"/>
                        </page>
                        <page name="Enrollment">
                            <field name="enrollment_ids">
                                <tree>
<!--                                    <field name="enrollment_id"/>-->
                                    <field name="partner_id"/>
                                    <field name="course_id"/>
                                    <field name="fees"/>
                                    <field name="currency_id" optional="hide"/>
                                </tree>
                            </field>
                        </page>
                        <page name="Feedback">
                            <field name="feedback_ids">
                                <tree>
                                    <field name="review"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="ica_course_view_search" model="ir.ui.view">
        <field name="name">ica_course_view_search</field>
        <field name="model">ica.course</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="author_ids"/>
                <filter name="filter_state_published" string="Published" domain="[('state','=','published')]"/>
                <filter name="filter_state_unpublished" string="Unpublished" domain="[('state','=','unpublished')]"/>
                <filter name="filter_state_draft" string="Draft" domain="[('state','=','draft')]"/>
                <group expand="1" string="Group By">
                    <filter name="groupby_state" context="{'group_by' : 'state'}" string="State"/>
                    <filter name="groupby_author_ids" context="{'group_by' : 'author_ids'}" string="Authors"/>
                </group>
            </search>
        </field>
    </record>

    <record id="ica_course_action" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ica.course</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_filter_state_published': 0,
                               'search_default_groupby_author_ids': 0}</field>
    </record>

    <record id="model_ica_course_published" model="ir.actions.server">
        <field name="name">Publish</field>
        <field name="model_id" ref="ica_elearning.model_ica_course"/>
        <field name="binding_model_id" ref="ica_elearning.model_ica_course"/>
        <field name="binding_view_types">tree</field>
        <field name="state">code</field>
        <field name="code">action = records.action_published()</field>
    </record>


</odoo>