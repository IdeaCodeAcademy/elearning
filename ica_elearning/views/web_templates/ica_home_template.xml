<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="ica_elearning.home">
        <t t-call="website.layout">
            <div class="container mt-2">
                <h1>Hello Home Page</h1>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <td>Name</td>
                            <td>Fees</td>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="course_ids" t-as="course">
                            <a>
                                <tr>
                                    <td><t t-esc="course.name"/></td>
                                    <td><t t-esc="course.fees"/></td>
                                    <td><a t-attf-href="/ica/course/details/#{course.id}" class="btn btn-primary">Details</a></td>
                                </tr>
                            </a>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>
</odoo>