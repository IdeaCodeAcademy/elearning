<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="ica_course_feedback_wizard_view_form" model="ir.ui.view">
        <field name="name">ica_course_feedback_wizard_view_form_view_form</field>
        <field name="model">ica.course.feedback.wizard</field>
        <field name="arch" type="xml">
            <form string="ica_course_feedback_wizard_view_form_form">
                <sheet>
                    <field name="review"/>
                </sheet>
                <footer>
                    <button name="action_add_review" type="object" string="Add Review" class="btn-primary"/>
                    <button special="cancel" data-hotkey="x" string="Cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="ica_course_feedback_wizard_action" model="ir.actions.act_window">
        <field name="name">Add Feedback</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ica.course.feedback.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>