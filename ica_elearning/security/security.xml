<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="module_category_ica_elearning" model="ir.module.category">
            <field name="name">ICA E-Learning</field>
        </record>
        <record id="group_reader" model="res.groups">
            <field name="name">Reader</field>
            <field name="category_id" ref="ica_elearning.module_category_ica_elearning"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="group_author" model="res.groups">
            <field name="name">Author</field>
            <field name="category_id" ref="ica_elearning.module_category_ica_elearning"/>
            <field name="implied_ids" eval="[(4, ref('ica_elearning.group_reader'))]"/>
        </record>
        <record id="group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="ica_elearning.module_category_ica_elearning"/>
            <field name="implied_ids" eval="[(4, ref('ica_elearning.group_author'))]"/>
            <field name="users" eval="[Command.link(ref('base.user_root')), Command.link(ref('base.user_admin'))]"/>
        </record>
    </data>
    <data>
        <record id="elearning_reader" model="ir.rule">
            <field name="name">ICA Elearning : Readers</field>
            <field name="model_id" ref="ica_elearning.model_ica_course"/>
            <field name="domain_force">[('state', '=', 'published')]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="groups" eval="[Command.link(ref('ica_elearning.group_reader'))]"/>
        </record>

        <record id="elearning_author" model="ir.rule">
            <field name="name">ICA Elearning : Authors</field>
            <field name="model_id" ref="ica_elearning.model_ica_course"/>
            <field name="domain_force">[('author_ids', 'in', user.partner_id.id)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="False"/>
            <field name="groups" eval="[Command.link(ref('ica_elearning.group_author'))]"/>
        </record>
    </data>
</odoo>